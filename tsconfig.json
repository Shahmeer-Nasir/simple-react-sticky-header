{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "Node",
      "declaration": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": ["src", "src/index.ts"],
    "exclude": ["example", "node_modules", "dist"]
}
  